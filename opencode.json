{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/kimi-k2.5-free",
  "plugin": ["oh-my-opencode", "opencode-supermemory"],
  "agent": {
    "CMZ": {
      "mode": "primary",
      "description": "Primary orchestrating agent"
    }
  },
  "permission": {
    "external_directory": {
      "/tmp/*": "allow",
      "/var/tmp/*": "allow"
    },
    "bash": "allow",
    "read": "allow",
    "edit": "allow"
  },
  "skills": {
    "paths": [".opencode/skills"]
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true
    },
    "websearch": { "enabled": true },
    "context7": { "enabled": true },
    "github": { "enabled": true }
  },
  "lsp": false
}
