{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/kimi-k2.5-free",
  "agent": {
    "CMZ": {
      "mode": "primary"
    }
  },
  "permission": {
    "external_directory": {
      "/tmp/*": "allow",
      "/var/tmp/*": "allow"
    },
    "bash": "allow",
    "read": "allow",
    "edit": "allow"
  },
  "skills": {
    "paths": [".opencode/skills"]
  },
  "mcp": {
    "websearch": { "enabled": true },
    "context7": { "enabled": true },
    "github": { "enabled": true }
  },
  "lsp": false
}
