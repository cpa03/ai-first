{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/kimi-k2.5-free",
  "plugin": ["oh-my-opencode", "opencode-supermemory"],
  "agent": "CMZ",
  "permission": [
    {
      "type": "external_directory",
      "path": "/tmp/*",
      "access": "allow"
    },
    {
      "type": "external_directory",
      "path": "/var/tmp/*",
      "access": "allow"
    },
    {
      "type": "file",
      "path": "**/*",
      "access": "allow"
    }
  ],
  "skills": {
    "paths": [".opencode/skills"]
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true
    },
    "websearch": { "enabled": true },
    "context7": { "enabled": true },
    "github": { "enabled": true }
  },
  "lsp": {
    "enabled": true
  }
}
