{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/kimi-k2.5-free",
  "agent": {
    "CMZ": {
      "enabled": true,
      "orchestration": true
    }
  },
  "permission": {
    "external_directory": {
      "/tmp/*": "allow",
      "/var/tmp/*": "allow"
    },
    "allow": ["**/*"]
  },
  "skills": {
    "paths": [".opencode/skills"]
  },
  "mcp": {
    "websearch": { "enabled": true },
    "context7": { "enabled": true },
    "github": { "enabled": true }
  },
  "lsp": true
}
