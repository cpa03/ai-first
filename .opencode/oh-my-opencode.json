{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
  "agents": {
    "sisyphus": {
      "model": "opencode/kimi-k2.5-free"
    },
    "hephaestus": {
      "model": "opencode/glm-4.7-free"
    },
    "oracle": {
      "model": "opencode/kimi-k2.5-free"
    },
    "librarian": {
      "model": "opencode/glm-4.7-free"
    },
    "explore": {
      "model": "opencode/glm-4.7-free"
    },
    "multimodal_looker": {
      "model": "opencode/glm-4.7-free"
    },
    "prometheus": {
      "model": "opencode/kimi-k2.5-free"
    },
    "metis": {
      "model": "opencode/kimi-k2.5-free"
    },
    "momus": {
      "model": "opencode/kimi-k2.5-free"
    },
    "atlas": {
      "model": "opencode/kimi-k2.5-free"
    }
  },
  "categories": {
    "visual-engineering": {
      "model": "opencode/glm-4.7-free"
    },
    "ultrabrain": {
      "model": "opencode/kimi-k2.5-free"
    },
    "deep": {
      "model": "opencode/kimi-k2.5-free"
    },
    "artistry": {
      "model": "opencode/glm-4.7-free"
    },
    "quick": {
      "model": "opencode/minimax-m2.1-free"
    },
    "unspecified-low": {
      "model": "opencode/minimax-m2.1-free"
    },
    "unspecified-high": {
      "model": "opencode/kimi-k2.5-free"
    },
    "writing": {
      "model": "opencode/glm-4.7-free"
    }
  },
  "version": "3.0.0",
  "enabled": true,
  "model": "opencode/kimi-k2.5-free",
  "build": {
    "sisyphus": {
      "enabled": true,
      "model": "opencode/kimi-k2.5-free",
      "ultrawork_keyword": "ulw",
      "background_tasks": true,
      "parallel_agents": true,
      "todo_enforcement": true
    },
    "hephaestus": {
      "enabled": true,
      "model": "opencode/glm-4.7-free",
      "autonomous_mode": true,
      "deep_exploration": true
    },
    "oracle": {
      "enabled": true,
      "model": "opencode/kimi-k2.5-free",
      "category": "ultrabrain"
    },
    "librarian": {
      "enabled": true,
      "model": "opencode/glm-4.7-free",
      "category": "quick"
    },
    "explore": {
      "enabled": true,
      "model": "opencode/glm-4.7-free",
      "category": "quick"
    },
    "frontend_ui_ux": {
      "enabled": true,
      "model": "opencode/glm-4.7-free",
      "category": "visual-engineering",
      "skills": ["frontend-ui-ux"]
    },
    "minimax_agent": {
      "enabled": true,
      "model": "opencode/minimax-m2.1-free",
      "category": "general",
      "description": "Agent using Minimax M2.1 model for balanced performance"
    }
  },
  "mcp": {
    "websearch": {
      "enabled": true,
      "provider": "exa"
    },
    "context7": {
      "enabled": true
    },
    "github": {
      "enabled": true
    }
  },
  "lsp": {
    "enabled": true,
    "refactoring": true,
    "diagnostics": true
  },
  "skills": {
    "paths": [".opencode/skills"]
  },
  "hooks": {
    "enabled": [
      "pre_tool_use",
      "post_tool_use",
      "user_prompt_submit",
      "stop",
      "pre_model_use",
      "post_model_use"
    ],
    "disabled": ["anthropic-context-window-limit-recovery"]
  },
  "performance": {
    "cache_enabled": true,
    "parallel_agents": true,
    "background_tasks": true,
    "lsp_integration": true
  },
  "integration": {
    "superpowers": {
      "enabled": true,
      "tdd_enforced": true,
      "systematic_debugging": true,
      "subagent_development": true
    },
    "ultrarag": {
      "enabled": true,
      "mcp_servers": true
    }
  }
}
