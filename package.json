{
  "name": "ai-first",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:check": "npm run env:check && npm run dev",
    "build": "next build",
    "build:check": "npm run env:check && npm run build",
    "start": "next start",
    "lint": "eslint src tests --ext .ts,.tsx --max-warnings=0",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:unit": "jest --testPathPattern='tests/(backend-comprehensive|frontend-comprehensive)'",
    "test:integration": "jest --testPathPattern='tests/integration-comprehensive'",
    "test:e2e": "jest --testPathPattern='tests/e2e-comprehensive'",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "env:check": "bash scripts/validate-env.sh",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "scan:console": "node scripts/scan-console.js",
    "audit:lighthouse": "node scripts/lighthouse-audit.js",
    "broc": "npm run build && npm run scan:console && npm run audit:lighthouse",
    "analyze": "ANALYZE=true npm run build"
  },
  "dependencies": {
    "@notionhq/client": "^5.9.0",
    "@octokit/graphql": "^9.0.3",
    "@supabase/supabase-js": "^2.95.3",
    "@types/js-yaml": "^4.0.9",
    "clsx": "^2.1.1",
    "googleapis": "^169.0.0",
    "js-yaml": "^4.1.1",
    "next": "^16.1.6",
    "openai": "^4.20.1",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.6",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.33",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.1.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.8.2",
    "oh-my-opencode": "^3.4.0",
    "playwright": "^1.58.2",
    "postcss": "^8",
    "prettier": "^3.8.1",
    "puppeteer": "^24.37.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "glob": "^13.0.0",
    "test-exclude": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">= 0.5%",
      "last 2 major versions",
      "not dead",
      "not IE 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
